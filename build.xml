<?xml version="1.0" encoding="UTF-8"?> 
<project xmlns:ivy="antlib:org.apache.ivy.ant" name="three_fab">
	
	<property name="publish.revision" value="1.0"/>
	<property name="project-name" value="three_fab" />
	
	<!-- Deploy Paths -->
	<property name="boilerplate.dir" value="${basedir}/../../html5-boilerplate-2_0/" />
	<property name="src.dir" value="${basedir}" />
	
	<target name="get_html5_boilerplate" description="Get's html5 boilerplate and copies it.">
        <echo message="Copying boilerplate" />
        <copy todir="${src.dir}">
            <fileset dir="${boilerplate.dir}">
                <exclude name="**/.settings/**" />
                <exclude name="**/*.as3_classpath"/>
                <exclude name="**/*.project"/>
                <exclude name="**/*.iml"/>
                <exclude name="**/.svn/**" />
                <exclude name="**/.gitignore/**" />
            	<exclude name="**/build.xml" />
            </fileset>
        </copy>
    </target>
    
</project>
